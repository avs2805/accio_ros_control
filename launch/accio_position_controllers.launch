<?xml version="1.0"?>
<launch>
    <!-- parameters from config files -->
    <rosparam file="$(find accio_hardware_interface)/config/hardware.yaml" command="load" />
    <rosparam file="$(find accio_hardware_interface)/config/controllers.yaml" command="load"/>
    <rosparam file="$(find accio_hardware_interface)/config/joint_limits.yaml" command="load" ns="" />
    <!-- Nodes -->
    <node name="accio_hardware_interface" pkg="accio_hardware_interface" type="accio_hardware_interface_node" output="screen"/>
    <node name="controller_spawner" pkg="controller_manager" type="spawner" output="screen" respawn="false" ns="/" args="
            /accio/controller/state
            /accio/controller/position/left_wheel_joint
            /accio/controller/position/right_wheel_joint
        "/>
</launch>